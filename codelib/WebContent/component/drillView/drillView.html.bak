		<link rel="stylesheet" type="text/css" href="../../common/AIComp/css/AI.DrillView.css" />
		<link href="../../common/AIComp/script/lib/jquery/thickbox/thickbox.css" type="text/css" rel="stylesheet" />

    <script type="text/javascript" src="../../common/AIComp/script/lib/excanvas.js"></script>
		<script type="text/javascript" src="../../common/AIComp/script/lib/jquery/jquery-1.3.2.min.js"></script>
		<script type="text/javascript" src="../../common/AIComp/script/lib/jquery/jquery-ui.min.js"></script>  
		<script type="text/javascript" src="../../common/AIComp/script/lib/jquery/thickbox/thickbox.js"></script>	
		<script type="text/javascript" src="../../common/AIComp/script/AI.DrillView.js"></script>
		<script type="text/javascript"> 
		//	var GLOAB_PATH="../../";
			$(document).ready(function(){
				$('#viewContainer').drillView({
						params:$('#queryForm').serialize(),
						url : '../../common/AIComp/data/drill.json',
						drillUrl:'../../common/AIComp/data/',
						lSpace : 10,
						bSpace : 30,
						width : 160,
						height : 120,
						drillFunc:openDrillPage
					});
				$("#viewContainer").draggable({scroll:true,opacity:0.5});
				$("#panelContainer").height($('body').height()-54);	
			});
			function drill(){

			}
			function openDrillPage(id,title,pid){
         alert("id:" + id + ",title:"+ title + ",pid:" + pid);
			}			
		</script>
	</head>
	<body>
		<div id="filterDiv" style="FILTER: alpha(opacity=90);">
			<table>
				<tr>
					<td min="-1" max="-1" class="curFilter">
						全部环比层次
					</td>
				</tr>
				<tr class="even">
					<td min="1.0" max="-1" >
						100%以上
					</td>
				</tr>
				<script type="text/javascript">
						for(var i=100;i>0;i-=10){
							var lVal=(i-10)/100;
							var rVal=i/100;
							rVal=(rVal==1)?"1.0":rVal;
							var className=((i/10)%2==0)?"odd":"even";
							document.write("<tr class=\""+className+"\" ><td min=\""+lVal+"\" max=\""+rVal+"\" >"+lVal+"～"+rVal+"</td></tr>");
						}
					</script>
			</table>
		</div>
		<h1 class="navTitle">
			<span class="title">日飞信到达用户数</span>
		</h1>
		<div id="panelContainer" style="height:100%;">
			<div id="viewContainer">
				<canvas id="canvas" width="3500" height="1500"></canvas>
			</div>
		</div>
	</body>
</html>
